<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Nama Band"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:id="@+id/textViewNamaBand"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <TextView
        android:text="Jadwal Manggung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewJadwalM"
        android:layout_below="@+id/textViewStage"
        android:layout_alignLeft="@+id/textViewStage"
        android:layout_alignStart="@+id/textViewStage"
        android:textSize="18sp" />

    <TextView
        android:text="Stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewStage"
        android:layout_below="@+id/textViewNamaBand"
        android:layout_alignLeft="@+id/textViewNamaBand"
        android:layout_alignStart="@+id/textViewNamaBand"
        android:textSize="18sp" />
</RelativeLayout>